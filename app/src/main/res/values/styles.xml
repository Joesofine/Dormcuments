<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="android:windowDisablePreview">true</item>
        <item name="colorPrimary">@color/VeryDarkBlueTopBar</item>
        <item name="colorPrimaryDark">@color/VeryDarkBlueTopBar</item>
        <item name="colorAccent">@color/Slider</item>
        <item name="android:navigationBarColor">@color/VeryDarkBlueTopBar</item>
    </style>

    <style name="MyDialogStyle"  parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:buttonBarButtonStyle">@style/MyButtonsStyle</item>
        <item name="android:colorBackground">@color/VeryDarkBlueTopBar</item>
    </style>

    <style name="MyButtonsStyle" parent="Widget.AppCompat.Button.ButtonBar.AlertDialog">
        <item name="android:textColor">@color/White</item>
        <item name="android:colorBackground">@color/VeryDarkBlueTopBar</item>
    </style>

    <!-- This style is for the splash screen -->
    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
</resources>