<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/residents_button"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:background="@drawable/more_button"
        android:drawableBottom="@drawable/residents_icon"
        android:drawablePadding="0dp"
        android:elevation="10dp"
        android:paddingBottom="5dp"
        android:text="Residents"
        android:textAllCaps="false"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="@+id/meeting_button"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="@+id/meeting_button"
        app:layout_constraintTop_toTopOf="@+id/rules_button" />

    <Button
        android:id="@+id/meeting_button"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginTop="50dp"
        android:background="@drawable/more_button"
        android:drawableBottom="@drawable/day_view"
        android:drawablePadding="0dp"
        android:paddingBottom="5dp"
        android:text="@string/title_meeting"
        android:textAllCaps="false"
        android:textSize="18sp"
        android:elevation="10dp"
        app:layout_constraintEnd_toStartOf="@+id/cleaning_button"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/cleaning_button"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginTop="50dp"
        android:background="@drawable/more_button"
        android:drawableBottom="@drawable/cleaning_icon"
        android:drawablePadding="0dp"
        android:paddingBottom="5dp"
        android:text="@string/title_cleaning"
        android:textAllCaps="false"
        android:textSize="18sp"
        android:elevation="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/meeting_button"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/rules_button"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/more_button"
        android:drawableBottom="@drawable/rules_icon"
        android:drawablePadding="0dp"
        android:paddingBottom="5dp"
        android:text="@string/title_rules"
        android:textAllCaps="false"
        android:textSize="18sp"
        android:elevation="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/meeting_button"
        app:layout_constraintTop_toBottomOf="@+id/cleaning_button" />





</androidx.constraintlayout.widget.ConstraintLayout>