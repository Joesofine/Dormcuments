<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_gradient">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingBottom="30dp">


            <EditText
                android:id="@+id/name_signup"
                android:layout_width="320dp"
                android:layout_height="40dp"
                android:layout_marginTop="50dp"
                android:drawableLeft="@drawable/name_icon"
                android:drawablePadding="10dp"
                android:hint="Firstname"
                android:inputType="textPersonName|textCapSentences"
                android:textColor="@color/hint"
                android:textSize="14sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <EditText
                android:id="@+id/city_signup"
                android:layout_width="320dp"
                android:layout_height="40dp"
                android:layout_marginTop="15dp"
                android:drawableLeft="@drawable/city_icon"
                android:drawablePadding="10dp"
                android:hint="City"
                android:inputType="textCapSentences"
                android:textColor="@color/hint"
                android:textSize="14sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/date" />

            <EditText
                android:id="@+id/country_signup"
                android:layout_width="320dp"
                android:layout_height="40dp"
                android:layout_marginTop="15dp"
                android:drawableLeft="@drawable/county_icon"
                android:drawablePadding="10dp"
                android:hint="Country"
                android:inputType="textCapSentences"
                android:selectAllOnFocus="true"
                android:textColor="@color/hint"
                android:textSize="14sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.511"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/city_signup" />

            <EditText
                android:id="@+id/lastname_signup"
                android:layout_width="320dp"
                android:layout_height="40dp"
                android:layout_marginTop="15dp"
                android:drawableLeft="@drawable/name_icon"
                android:drawablePadding="10dp"
                android:hint="Lastname"
                android:inputType="textPersonName|textCapSentences"
                android:selectAllOnFocus="false"
                android:textColor="@color/hint"
                android:textSize="14sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/name_signup" />

            <Spinner
                android:id="@+id/room_spinner"
                style="@style/Widget.AppCompat.Spinner.Underlined"
                android:layout_width="320dp"
                android:layout_height="45dp"
                android:layout_centerHorizontal="false"
                android:layout_centerVertical="true"
                android:layout_marginTop="15dp"
                android:gravity="left"
                android:padding="0dp"
                app:backgroundTint="@color/hint"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/lastname_signup" />

            <EditText
                android:id="@+id/date"
                android:layout_width="320dp"
                android:layout_height="40dp"
                android:layout_marginTop="15dp"
                android:drawableLeft="@drawable/birthday_icon"
                android:drawablePadding="10dp"
                android:hint="Birthday"
                android:inputType="date"
                android:selectAllOnFocus="true"
                android:textColor="@color/hint"
                android:textSize="14sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/room_spinner" />

            <EditText
                android:id="@+id/funfact"
                android:layout_width="320dp"
                android:layout_height="40dp"
                android:layout_marginTop="15dp"
                android:drawableLeft="@drawable/fun_icon"
                android:drawablePadding="10dp"
                android:hint="Funfact"
                android:inputType="textLongMessage|textMultiLine|textCapSentences"
                android:selectAllOnFocus="true"
                android:textColor="@color/hint"
                android:textSize="14sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/diet" />

            <EditText
                android:id="@+id/diet"
                android:layout_width="320dp"
                android:layout_height="40dp"
                android:layout_marginTop="15dp"
                android:drawableLeft="@drawable/diet_icon"
                android:drawablePadding="10dp"
                android:hint="Diets and Allergies"
                android:inputType="textLongMessage|textMultiLine|textCapSentences"
                android:selectAllOnFocus="true"
                android:textColor="@color/hint"
                android:textSize="14sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/country_signup" />

            <EditText
                android:id="@+id/email"
                android:layout_width="320dp"
                android:layout_height="40dp"
                android:layout_marginTop="15dp"
                android:drawableLeft="@drawable/email_icon"
                android:drawablePadding="10dp"
                android:hint="@string/prompt_email"
                android:inputType="textEmailAddress"
                android:selectAllOnFocus="true"
                android:textColor="@color/hint"
                android:textSize="14sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/funfact" />

            <EditText
                android:id="@+id/cho_password"
                android:layout_width="320dp"
                android:layout_height="40dp"
                android:layout_marginTop="15dp"
                android:drawableLeft="@drawable/password_icon"
                android:drawablePadding="10dp"
                android:hint="Choose Password"
                android:inputType="textPassword"
                android:selectAllOnFocus="true"
                android:textColor="@color/hint"
                android:textSize="14sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/email" />

            <EditText
                android:id="@+id/reap_password"
                android:layout_width="320dp"
                android:layout_height="40dp"
                android:layout_marginTop="15dp"
                android:drawableLeft="@drawable/password_icon"
                android:drawablePadding="10dp"
                android:hint="Repeat Password"
                android:inputType="textPassword"
                android:selectAllOnFocus="true"
                android:textColor="@color/hint"
                android:textSize="14sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.511"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/cho_password" />

            <Button
                android:id="@+id/save"
                android:layout_width="80dp"
                android:layout_height="40dp"
                android:layout_marginTop="30dp"
                android:background="@drawable/button_standart_color"
                android:text="Next"
                android:textAllCaps="false"
                android:textColor="#0C0000"
                app:layout_constraintEnd_toEndOf="@+id/reap_password"
                app:layout_constraintTop_toBottomOf="@+id/reap_password" />

            <Button
                android:id="@+id/back"
                android:layout_width="80dp"
                android:layout_height="40dp"
                android:layout_marginTop="30dp"
                android:background="@drawable/button_standart_color"
                android:text="Cancel"
                android:textAllCaps="false"
                android:textColor="#090000"
                app:layout_constraintStart_toStartOf="@+id/reap_password"
                app:layout_constraintTop_toBottomOf="@+id/reap_password" />


        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

</LinearLayout>