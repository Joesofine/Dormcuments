<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_gradient"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingBottom="30dp">


            <TextView
                android:id="@+id/textView17"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:text="Create login:"
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                android:textStyle="italic"
                app:layout_constraintBottom_toTopOf="@+id/email"
                app:layout_constraintStart_toStartOf="@+id/name_signup" />

            <TextView
                android:id="@+id/textView16"
                android:layout_width="wrap_content"
                android:layout_height="19dp"
                android:layout_marginBottom="5dp"
                android:text="Optional:"
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                android:textStyle="italic"
                app:layout_constraintBottom_toTopOf="@+id/diet"
                app:layout_constraintStart_toStartOf="@+id/name_signup" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/constraintLayout2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:elevation="5dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <Button
                    android:id="@+id/close"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/sign_in_button"
                    android:text="Close"
                    android:textAllCaps="false"
                    android:textColor="#0C0000"
                    android:visibility="gone"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/datePicker" />

                <DatePicker
                    android:id="@+id/datePicker"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:animateLayoutChanges="false"
                    android:background="#FFFFFF"
                    android:calendarViewShown="false"
                    android:datePickerMode="spinner"
                    android:visibility="gone"
                    app:layout_constraintBottom_toTopOf="@+id/close"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="1.0" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <EditText
                android:id="@+id/name_signup"
                android:layout_width="320dp"
                android:layout_height="40dp"
                android:layout_marginTop="5dp"
                android:drawableLeft="@drawable/name_icon_white"
                android:drawablePadding="10dp"
                android:hint="Fullname"
                android:inputType="textPersonName|textCapSentences"
                android:textColor="@color/White"
                android:textColorHint="@color/lightHint"
                android:textSize="14sp"
                app:backgroundTint="@color/White"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView" />

            <EditText
                android:id="@+id/city_signup"
                android:layout_width="160dp"
                android:layout_height="40dp"
                android:layout_marginTop="15dp"
                android:drawableLeft="@drawable/city_icon_white"
                android:drawablePadding="10dp"
                android:hint="City of origin"
                android:inputType="textCapSentences"
                android:textColor="@color/White"
                android:textColorHint="@color/lightHint"
                android:textSize="14sp"
                app:backgroundTint="@color/White"
                app:layout_constraintStart_toStartOf="@+id/date"
                app:layout_constraintTop_toBottomOf="@+id/date" />

            <EditText
                android:id="@+id/country_signup"
                android:layout_width="160dp"
                android:layout_height="40dp"
                android:drawableLeft="@drawable/county_icon_white"
                android:drawablePadding="10dp"
                android:hint="Country"
                android:inputType="textCapSentences"
                android:selectAllOnFocus="true"
                android:textColor="@color/White"
                android:textColorHint="@color/lightHint"
                android:textSize="14sp"
                app:backgroundTint="@color/White"
                app:layout_constraintEnd_toEndOf="@+id/date"
                app:layout_constraintTop_toTopOf="@+id/city_signup" />

            <Spinner
                android:id="@+id/room_spinner"
                style="@style/Widget.AppCompat.Spinner.Underlined"
                android:layout_width="320dp"
                android:layout_height="45dp"
                android:layout_centerHorizontal="false"
                android:layout_centerVertical="true"
                android:layout_marginTop="15dp"
                android:gravity="left"
                android:padding="0dp"
                app:backgroundTint="@color/White"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/city_signup" />

            <EditText
                android:id="@+id/date"
                android:layout_width="320dp"
                android:layout_height="40dp"
                android:layout_marginTop="15dp"
                android:drawableLeft="@drawable/birthday_icon_white"
                android:drawablePadding="10dp"
                android:editable="false"
                android:hint="Birthday"
                android:inputType="none"
                android:selectAllOnFocus="true"
                android:textColorHint="@color/lightHint"
                android:textSize="14sp"
                app:backgroundTint="@color/White"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/name_signup" />

            <EditText
                android:id="@+id/funfact"
                android:layout_width="320dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:drawableLeft="@drawable/fun_icon_white"
                android:drawablePadding="10dp"
                android:hint="Funfact"
                android:imeOptions="actionNext"
                android:inputType="textLongMessage|textMultiLine|textCapSentences"
                android:selectAllOnFocus="true"
                android:textColor="@color/White"
                android:textColorHint="@color/lightHint"
                android:textSize="14sp"
                app:backgroundTint="@color/White"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/diet" />

            <EditText
                android:id="@+id/diet"
                android:layout_width="320dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="60dp"
                android:drawableLeft="@drawable/diet_icon_white"
                android:drawablePadding="10dp"
                android:hint="Diets and Allergies"
                android:imeOptions="actionNext"
                android:inputType="textLongMessage|textMultiLine|textCapSentences"
                android:selectAllOnFocus="true"
                android:textColor="@color/White"
                android:textColorHint="@color/lightHint"
                android:textSize="14sp"
                app:backgroundTint="@color/White"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/room_spinner" />

            <EditText
                android:id="@+id/email"
                android:layout_width="320dp"
                android:layout_height="40dp"
                android:layout_marginTop="60dp"
                android:drawableLeft="@drawable/email_icon_white"
                android:drawablePadding="10dp"
                android:hint="@string/prompt_email"
                android:inputType="textEmailAddress"
                android:selectAllOnFocus="true"
                android:textColor="@color/White"
                android:textColorHint="@color/lightHint"
                android:textSize="14sp"
                app:backgroundTint="@color/White"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/funfact" />

            <EditText
                android:id="@+id/cho_password"
                android:layout_width="320dp"
                android:layout_height="40dp"
                android:layout_marginTop="15dp"
                android:drawableLeft="@drawable/password_icon_white"
                android:drawablePadding="10dp"
                android:hint="Choose Password"
                android:inputType="textPassword"
                android:selectAllOnFocus="true"
                android:textColor="@color/White"
                android:textColorHint="@color/lightHint"
                android:textSize="14sp"
                app:backgroundTint="@color/White"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/email" />

            <EditText
                android:id="@+id/reap_password"
                android:layout_width="320dp"
                android:layout_height="40dp"
                android:layout_marginTop="15dp"
                android:drawableLeft="@drawable/password_icon_white"
                android:drawablePadding="10dp"
                android:hint="Repeat Password"
                android:inputType="textPassword"
                android:selectAllOnFocus="true"
                android:textColor="@color/White"
                android:textColorHint="@color/lightHint"
                android:textSize="14sp"
                android:visibility="visible"
                app:backgroundTint="@color/White"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.511"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/cho_password" />

            <Button
                android:id="@+id/save"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_marginTop="50dp"
                android:background="@drawable/sign_in_button"
                android:text="Next"
                android:textAllCaps="false"
                android:textColor="#0C0000"
                app:layout_constraintEnd_toEndOf="@+id/cho_password"
                app:layout_constraintStart_toStartOf="@+id/reap_password"
                app:layout_constraintTop_toBottomOf="@+id/reap_password" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                android:text="Who are you?:"
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                android:textStyle="italic"
                app:layout_constraintStart_toStartOf="@+id/name_signup"
                app:layout_constraintTop_toTopOf="parent" />


        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

</LinearLayout>